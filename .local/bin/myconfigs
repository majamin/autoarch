#!/bin/sh

(
dmenu -i -l 30 <<-EOF
zshrc      "${ZDOTDIR}/.zshrc"
zprofile   "${ZDOTDIR}/.zprofile"
xprofile   "${XDG_CONFIG_HOME:-$HOME/.config}/xprofile"
xinitrc    "$HOME/.xinitrc"
init.vim   "${XDG_CONFIG_HOME:-$HOME/.config}/nvim/init.vim"
dwm        "$HOME/.local/src/dwm/config.def.h"
statusbar  "$HOME/.local/src/dwmstatus/dwmstatus.c"
EOF
) | awk '{print $2}' | xargs vim
