#/bin/sh

# create loopback device if it doesn't exist
[ -z "$(v4l2-ctl -l) | grep "Cannot open device"" ] && sudo modprobe v4l2loopback_dc

# is the phone plugged in?
adb kill-server && adb start-server &> /dev/null &
[[ $(adb devices | wc -l ) = 3 ]] && notify-send "adb reports connection to a device" || notify-send "adb reports NO connections"
killall -q -9 droidcam
droidcam &
killall -q -9 ffplay
ffplay -autoexit -alwaysontop /dev/video0 &> /dev/null &

