#!/bin/sh

file="$HOME/.local/src/dwm/config.def.h"

MODKEY=$(grep "(?<=#define MODKEY ).+" -Po $file)

case $MODKEY in
	"Mod1Mask")	MODKEY="Alt";;
	"Mod4Mask")	MODKEY="Super";;
	*)		;;
esac

cat "$file" \
	| grep -A 100 -P "static Key" \
	| grep -P "\t{ MODKEY" \
	| sed 's/ {2,}//g' \
	| sed 's/|/ + /g' \
	| sed 's/XK_//g' \
	| sed 's/ShiftMask/Shift/g' \
	| sed "s/MODKEY/${MODKEY}/g" \
	| sed 's/\({\|}\)//g' \
	| sed 's/,/ +/' \
	| cut -d"," -f1,4 \
	| sed 's/\/\///g' \
	| sed 's/,/ |/' \
	| sed 's/^/| /' \
	| sed 's/$/ |/' |
while read -r line 
do
	echo $line
done | pandoc -t pdf | zathura -

	#| sed 's/,/ +/' \
	#| sed 's/$/ |/g' \
	#| awk -F, '{print $1 $4}' \
	#| sed 's/\/\//\|/g' \
	#| sed 's/{/|/g' \
	#| sed 's/ +
