#!/bin/sh

MODKEY=$(grep "(?<=#define MODKEY ).+" -Po "$HOME/.local/src/dwm/config.def.h")

case $MODKEY in
	"Mod1Mask")	MODKEY="Alt";;
	"Mod4Mask")	MODKEY="Super";;
	*)		;;
esac

echo $(
cat config.def.h | \ 
	grep -P "^\t{ " | \ 
	sed 's/MODKEY/Alt/g' | \ 
	sed 's/ShiftMask/Shift/g' | \ 
	sed 's/XK_//g' | \ 
	sed 's/|/+/g' | \ 
	sed 's/ \+/ /gp' | \ 
	awk -F, '{print $1 $2 $5}'
)
